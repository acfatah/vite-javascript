{
  "name": "@acfatah/vite-javascript",
  "type": "module",
  "version": "0.0.0",
  "private": false,
  "description": "Yet another example of nodejs application that uses Vite and Vitest.",
  "author": "Achmad F. Ibrahim <acfatah@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/acfatah/vite-javascript#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acfatah/vite-javascript.git"
  },
  "bugs": {
    "url": "https://github.com/acfatah/vite-javascript/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.umd.cjs"
    }
  },
  "main": "dist/main.umd.js",
  "module": "dist/main.js",
  "bin": "bin/main.mjs",
  "files": ["dist"],
  "scripts": {
    "start": "node dist/main.js",
    "dev": "vitest",
    "build": "vite build",
    "lint": "eslint .",
    "lint:file": "eslint --fix",
    "lint:fix": "eslint --fix .",
    "precommit": "npm run lint:fix",
    "clean": "npx rimraf .nyc_output coverage dist",
    "test": "npm run test:unit:coverage",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:coverage": "npm run clean && npm run test:unit:coverage && npx http-server -p 8888 coverage/lcov-report",
    "update-deps": "npm-check-updates --upgrade --silent --target semver && npm install --no-progress",
    "release": "release-it"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.7.3",
    "@rushstack/eslint-patch": "^1.10.4",
    "@vitest/coverage-istanbul": "^2.1.2",
    "eslint": "^9.12.0",
    "eslint-plugin-format": "^0.1.2",
    "npm-check-updates": "^17.1.3",
    "nyc": "^17.1.0",
    "prettier": "^3.3.3",
    "release-it": "^17.8.2",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "vite-node": "^2.1.2",
    "vitest": "^2.1.2"
  }
}
